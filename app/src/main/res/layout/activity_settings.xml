<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0B0B0B"
    tools:context=".Settings">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/englishButtonTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView" />

        <Button
            android:id="@+id/englishButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/english" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/serbianLatinButtonTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView" />

        <Button
            android:id="@+id/serbianLatinButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/serbianLatin" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/serbianCyrillicButtonTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView" />

        <Button
            android:id="@+id/serbianCyrillicButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/serbianCyrillic" />
    </LinearLayout>

    <ToggleButton
        android:id="@+id/notificationOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="Notification 1 OFF"
        android:textOn="Notification 1 ON" />

    <ToggleButton
        android:id="@+id/notificationTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="Notification 2 OFF"
        android:textOn="Notification 2 ON" />

    <ToggleButton
        android:id="@+id/notificationThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="Notification 3 OFF"
        android:textOn="Notification 3 ON" />

</LinearLayout>